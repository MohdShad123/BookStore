@{
    ViewData["Title"] = "Book detail" + Model.Title;
}
@model BookModel;



<div class="container mt-5">
    <h3 class="text-center mb-4">Book Details</h3>
    <div class="row">
        <div class="col-md-6">
            <div id="bookCarousel" class="carousel slide">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#bookCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#bookCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#bookCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://images.pexels.com/photos/904616/pexels-photo-904616.jpeg?auto=compress&cs=tinysrgb&w=600" class="d-block w-100 img-fluid" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img src="https://images.pexels.com/photos/267586/pexels-photo-267586.jpeg?auto=compress&cs=tinysrgb&w=600" class="d-block w-100 img-fluid" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img src="https://images.pexels.com/photos/1516983/pexels-photo-1516983.jpeg?auto=compress&cs=tinysrgb&w=600" class="d-block w-100 img-fluid" alt="Third slide">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#bookCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#bookCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <h1 class="mt-4">@Model.Title</h1>
            <div class="text-primary">
                <span class="font-weight-bold">By:</span>
                <span>@Model.Author</span>
            </div>
            <p class="mt-3">@Model.Description</p>
            <button class="btn btn-primary">Read now</button>

            <hr class="my-4">

            <ul class="list-group">
                <li class="list-group-item"><span class="font-weight-bold">Category:</span> @Model.Category</li>
                <li class="list-group-item"><span class="font-weight-bold">Total Pages:</span> @Model.TotalPages</li>
                <li class="list-group-item"><span class="font-weight-bold">Language:</span> @Model.Language</li>
            </ul>
        </div>
    </div>
</div>


<div class="container mt-5">
    <h3 class="text-center mb-4">Similar Books</h3>
    <div class="row">
       @for(int i = 0; i<5; i++)
       {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="https://images.pexels.com/photos/904616/pexels-photo-904616.jpeg?auto=compress&cs=tinysrgb&w=600" class="card-img-top" alt="Similar Book 1">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Title</h5>
                        <!-- Add additional details if needed -->
                        <a href="#" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
