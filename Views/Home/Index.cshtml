
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
    </head>
    <body>
        <h1>Welcome to Book Store Application</h1>

        @{
            int a = 2;
            int b = 0;
        }
    @if (a == 5)
    {
        a++;
        <h1>Hello from if block and value = @a</h1>
    }
    else if(a == 10)
    {
        <h1>Hello from else if block</h1>
    }
    else
    {
        <h1>Hello from else block</h1>
    }

    <h1>Ternary - @(a==10 ? b=10: b=5)</h1>
    <h1>Value of b = @b</h1>

    @switch (a)
    {
        case 1:
            <h1>I am 1</h1>
            break;
        case 2:
            <h1>I am 2</h1>
            break;
        case 3:
            <h1>I am 3</h1>
            break;
        case 4:
            <h1>I am 4</h1>
            break;
        default:
            <h1>I am Default</h1>
            break;

    }

</body>
</html>
